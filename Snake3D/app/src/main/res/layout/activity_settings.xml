<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5362C"
    tools:context=".SettingsActivity">

        <CheckBox
            android:id="@+id/checkGraphic"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="50dp"
            android:alpha="0"
            android:checked="true"
            android:clickable="false"
            android:text="There is"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/english"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:alpha="0"
            android:checked="true"
            android:onClick="english"
            android:text="English"
            app:layout_constraintStart_toStartOf="@+id/russian"
            app:layout_constraintTop_toBottomOf="@+id/russian" />

        <CheckBox
            android:id="@+id/russian"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="50dp"
            android:alpha="0"
            android:onClick="russian"
            android:text="Russian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkGraphic" />

        <SeekBar
            android:id="@+id/checkSound"
            android:alpha="0"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/english" />

        <Button
            android:id="@+id/graphic"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_start"
            android:onClick="graphic"
            android:text="graphic"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/language"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/language"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_start"
            android:onClick="language"
            android:text="Language"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/graphic" />

        <Button
            android:id="@+id/sound"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_start"
            android:onClick="sound"
            android:text="Sound"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/language" />

        <Button
            android:id="@+id/control"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:onClick="control"
            android:background="@drawable/button_start"
            android:text="Control"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sound" />

</androidx.constraintlayout.widget.ConstraintLayout>